<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.MainActivity">

    <include layout="@layout/include_toolbar_view"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <fragment
            android:id="@+id/fragment_read"
            android:name="com.wis.module.fragment_read.ReadFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>
        <View
            android:id="@+id/textView"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/brown_700"
            android:text="TextView"/>
        <fragment
            android:id="@+id/fragment_compare"
            android:name="com.wis.module.fragment_compare.CompareFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"/>
    </LinearLayout>

</LinearLayout>
